@model student.Models.Class
    @{
    ViewData["Title"] = "Класс";
}
<h1>@Model.Title (@Model.Code)</h1>

<dl class="row">
    <dt class="col-sm-2">Код</dt>
    <dd class="col-sm-10">@Model.Code</dd>

    <dt class="col-sm-2">Название</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Студенты</dt>
    <dd class="col-sm-10">
        @if (Model.Enrollments != null && Model.Enrollments.Any())
        {
            <ul>
                @foreach (var e in Model.Enrollments)
                {
                    <li>@e.Student.FullName</li>
                }
            </ul>
        }
        else
        {
            <em>Пока никого</em>
        }
    </dd>
</dl>

<p>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Изменить</a>
    <a class="btn btn-secondary" asp-action="Index">Назад</a>
</p>