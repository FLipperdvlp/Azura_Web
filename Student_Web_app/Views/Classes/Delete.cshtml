@model student.Models.Class
    @{
    ViewData["Title"] = "Удалить класс";
}
<h1>@ViewData["Title"]</h1>

<div class="alert alert-warning">
    Вы уверены, что хотите удалить класс "@Model.Title" (@Model.Code)?
</div>

<dl class="row">
    <dt class="col-sm-2">Код</dt>
    <dd class="col-sm-10">@Model.Code</dd>
    <dt class="col-sm-2">Название</dt>
    <dd class="col-sm-10">@Model.Title</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>